<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <sql-query name = "GET_TABLES">SHOW TABLES;</sql-query>   
    <sql-query name = "GET_DB">SHOW DATABASES;</sql-query>   
    <sql-query name = "GET_TEST">DESCRIBE test;</sql-query>  
    <sql-query name = "GET_COL">SHOW COLUMNS FROM test;</sql-query> 
    <sql-query name = "GET_ALL_RECORDS">SELECT * FROM test;</sql-query> 
</hibernate-mapping>